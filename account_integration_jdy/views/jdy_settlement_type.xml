<odoo>
    <data>
        <record id="view_jdy_settlement_type_list" model="ir.ui.view">
            <field name="name">jdy.settlement.type.list</field>
            <field name="model">jdy.settlement.type</field>
            <field name="arch" type="xml">
                <tree string="结算方式">
                    <field name="jdy_id"/>
                    <field name="name"/>
                    <field name="enable"/>
                    <field name="is_default"/>
                </tree>
            </field>
        </record>

        <record id="action_jdy_settlement_type_form" model="ir.actions.act_window">
            <field name="name">结算方式</field>
            <field name="res_model">jdy.settlement.type</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_jdy_settlement_type_list"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                待同步结算方式
              </p>
            </field>
        </record>

        <menuitem action="action_jdy_settlement_type_form"
                  id="menu_action_jdy_settlement_type_form"
                  parent="account.account_account_menu"
                  groups="account.group_account_user"
                  sequence="18"/>
    </data>
</odoo>